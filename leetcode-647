# Optimal Solution :    (Time Complexity : O(n^2) and Space Complexity : O(n))

class Solution(object):
    def countSubstrings(self, s):
        ans = 0
        for i in range(len(s)):
            ans += self.checkpallindrome(s, i, i)     # Odd
            ans += self.checkpallindrome(s, i, i + 1) # Even
        return ans

    def checkpallindrome(self, s, left, right):
        count = 0
        while left >= 0 and right < len(s) and s[left] == s[right]:
            count += 1
            left -= 1
            right += 1
        return count
