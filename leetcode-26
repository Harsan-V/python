#   Brute Force Approach
class Solution(object):
    def removeDuplicates(self, nums):
        unique = []

        for i in nums:
            if i not in unique:
                unique.append(i)

        # copy back to nums
        for i in range(len(unique)):
            nums[i] = unique[i]

        return len(unique)

# optimal solution

class Solution(object):
    def removeDuplicates(self, nums):
        if not nums:
            return 0

        k = 1  # position for next unique element

        for i in range(1, len(nums)):
            if nums[i] != nums[i - 1]:
                nums[k] = nums[i]
                k += 1

        return k
