# optimal solution (time complexity : o(n))

class Solution(object):
    def searchRange(self, nums, target):
        first = -1
        last = -1

        for i in range(len(nums)):
            if nums[i] == target:
                if first == -1:
                    first = i
                last = i

        return [first, last]

# Binary Search  Approacj (TimeComplexity : o(log n))


class Solution(object):
    def searchRange(self, nums, target):
        def findLeft():
            l, r = 0, len(nums) - 1
            ans = -1
            while l <= r:
                mid = (l + r) // 2
                if nums[mid] >= target:
                    r = mid - 1
                else:
                    l = mid + 1
                if nums[mid] == target:
                    ans = mid
            return ans

        def findRight():
            l, r = 0, len(nums) - 1
            ans = -1
            while l <= r:
                mid = (l + r) // 2
                if nums[mid] <= target:
                    l = mid + 1
                else:
                    r = mid - 1
                if nums[mid] == target:
                    ans = mid
            return ans

        return [findLeft(), findRight()]

