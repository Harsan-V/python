b= int (input("Enter the number of blocks: "))
l = int (input("Enter the number of lines: "))
s = int (input("Enter the number of stars: "))
count=0
for i in range(b):
    print("-----------------")
    count = 0
    for j in range(1,l+1-i):
        for k in range(s):
            print("*",end=" ")
            count = s*j
        print(" ")
    print("Total = ",count)
    print("-------------------")
