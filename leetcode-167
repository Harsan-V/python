#  optimal solution (best)

class Solution(object):
    def twoSum(self, numbers, target):
        l, r = 0, len(numbers) - 1

        while l < r:
            s = numbers[l] + numbers[r]
            if s == target:
                return [l + 1, r + 1]  # 1-based indexing
            elif s < target:
                l += 1
            else:
                r -= 1
